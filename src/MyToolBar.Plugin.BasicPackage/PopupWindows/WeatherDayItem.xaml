<base:ItemBase x:Class="MyToolBar.Plugin.BasicPackage.PopupWindows.WeatherDayItem"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:base="clr-namespace:MyToolBar.Common.UIBases;assembly=MyToolBar.Common"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               Width="330"
               Height="35"
               mc:Ignorable="d">
    <Grid>
        <TextBlock x:Name="Day"
                   Margin="20,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="14"
                   FontWeight="Bold"
                   Text="Today"
                   TextWrapping="Wrap" />
        <Border x:Name="AQIColor"
                Width="35"
                Height="20"
                Margin="70,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="Red"
                CornerRadius="10">
            <TextBlock x:Name="AQI"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Foreground="#0C0C0C"
                       Text="120"
                       TextAlignment="Center" />
        </Border>

        <TextBlock x:Name="MaxTemp"
                   Margin="150,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Text="27℃" />
        <TextBlock x:Name="MinTemp"
                   Margin="0,0,20,0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Text="14℃" />
        <Border x:Name="TempLine"
                Height="8"
                Margin="180,0,50,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                CornerRadius="4,4,4,4">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterX="0.5" CenterY="0.5" />
                            <SkewTransform CenterX="0.5" CenterY="0.5" />
                            <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5" />
                            <TranslateTransform />
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Offset="0" Color="#FF3C81FB" />
                    <GradientStop Offset="1" Color="#FFF24747" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Border x:Name="icon"
                Width="25"
                Height="25"
                Margin="115,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center" />

    </Grid>
</base:ItemBase>
