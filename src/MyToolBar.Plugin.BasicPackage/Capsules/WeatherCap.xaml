<base:CapsuleBase x:Class="MyToolBar.Plugin.BasicPackage.Capsules.WeatherCap"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:base="clr-namespace:MyToolBar.Common.UIBases;assembly=MyToolBar.Common"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  Height="30"
                  mc:Ignorable="d">
    <Grid x:Name="WeatherViewer">
        <Border x:Name="AirLevel"
                Width="8"
                Height="8"
                Margin="0,0,2,2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="#FFA8A8A8"
                CornerRadius="8" />
        <Border x:Name="Weather_Icon"
                Width="20"
                Height="20"
                Margin="0,0,8,0"
                HorizontalAlignment="Right"
                CornerRadius="20,20,20,20" />
        <TextBlock x:Name="Weather_info"
                   Margin="5,0,33,0"
                   VerticalAlignment="Center"
                   d:Text="24℃  Moderate Rain"
                   Text="No Internet"
                   TextWrapping="Wrap" />
    </Grid>
</base:CapsuleBase>
