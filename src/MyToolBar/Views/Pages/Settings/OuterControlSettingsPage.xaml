<Page
    x:Class="MyToolBar.Views.Pages.Settings.OuterControlSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:MyToolBar.Common.UIBases;assembly=MyToolBar.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyToolBar.Views.Pages.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ws="https://schemas.elecho.dev/wpfsuite"
    Title="OuterControlSettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Foreground="{DynamicResource ForeColor}"
    mc:Ignorable="d">

    <base:ScrollViewer Style="{StaticResource SimpleVerticalScrollViewerStyle}">
        <StackPanel>
            <TextBlock
                Margin="20,20,20,8"
                FontSize="22"
                FontWeight="Bold"
                Text="{DynamicResource SettingsWindow_Tab_OuterControl}" />
            <ws:Button
                x:Name="testBtn"
                Height="48"
                Margin="5,0,5,10"
                Click="testBtn_Click"
                Content="test notification"
                Style="{StaticResource SimpleButtonStyleForWs}" />
            <ws:Button
                x:Name="RemoveOuterControlBtn"
                Height="48"
                Margin="5,0,5,10"
                Click="RemoveOuterControlBtn_Click"
                Content="{DynamicResource OuterControlSettings_Remove}"
                Style="{StaticResource SimpleButtonStyleForWs}" />
            <ws:ListBox
                x:Name="OCPluginList"
                d:ItemsSource="{d:SampleData ItemCount=5}"
                Background="Transparent"
                BorderThickness="0"
                ItemContainerStyle="{DynamicResource SimpleListBoxItemStyle}"
                ItemsSource="{Binding}"
                SelectionChanged="OCPluginList_SelectionChanged">
                <ws:ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Height="Auto"
                            Padding="18"
                            Background="Transparent">
                            <TextBlock>
                                <Run
                                    FontSize="22"
                                    FontWeight="Bold"
                                    Text="{Binding DisplayName, Mode=OneWay}" />
                                <LineBreak />
                                <Run Text="{Binding Description, Mode=OneWay}" />
                            </TextBlock>
                        </Border>
                    </DataTemplate>
                </ws:ListBox.ItemTemplate>
            </ws:ListBox>
        </StackPanel>
    </base:ScrollViewer>
</Page>
