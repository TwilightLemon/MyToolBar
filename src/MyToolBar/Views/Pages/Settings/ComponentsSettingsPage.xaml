<Page x:Class="MyToolBar.Views.Pages.Settings.ComponentsSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:MyToolBar.Views.Pages.Settings"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ws="https://schemas.elecho.dev/wpfsuite"
      xmlns:base="clr-namespace:MyToolBar.Common.UIBases;assembly=MyToolBar.Common"
      Title="ComponentsSettingsPage"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Foreground="{DynamicResource ForeColor}"
      mc:Ignorable="d">
    <ws:BoxPanel>
        <base:ScrollViewer Style="{StaticResource SimpleVerticalScrollViewerStyle}">
            <StackPanel x:Name="PackagesPanel">
                <TextBlock Margin="20,20,0,0"
                           FontSize="22"
                           FontWeight="Bold"
                           Text="{DynamicResource SettingsWindow_Tab_Components}" />
            </StackPanel>
        </base:ScrollViewer>
        <Grid>
            <ws:Button x:Name="AddPluginBtn"
                       Width="48"
                       Height="48"
                       Margin="22"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Click="AddPluginBtn_Click"
                       CornerRadius="24"
                       Style="{StaticResource AccentButtonStyleForWs}">
                <Path Width="14"
                      Height="14"
                      Data="{StaticResource Icon_add}"
                      Fill="{DynamicResource ForeColor}"
                      Stretch="Uniform" />
            </ws:Button>
        </Grid>
    </ws:BoxPanel>
</Page>
