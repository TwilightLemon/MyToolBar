<Page
    x:Class="MyToolBar.Views.Pages.Settings.ServicesSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:MyToolBar.Common.UIBases;assembly=MyToolBar.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyToolBar.Views.Pages.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ws="https://schemas.elecho.dev/wpfsuite"
    Title="ServicesSettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Foreground="{DynamicResource ForeColor}"
    mc:Ignorable="d">

    <Grid>
        <TextBlock
            Margin="20,20,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="20"
            FontWeight="Bold"
            Text="{DynamicResource SettingsWindow_Tab_Services}" />

        <base:ScrollViewer Style="{StaticResource SimpleVerticalScrollViewerStyle}">
            <StackPanel x:Name="ServiceList" Margin="0,60,0,0" />
        </base:ScrollViewer>

    </Grid>
</Page>
