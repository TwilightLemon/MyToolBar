<Page
    x:Class="MyToolBar.Views.Pages.Settings.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:MyToolBar.Common.UIBases;assembly=MyToolBar.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyToolBar.Views.Pages.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ws="https://schemas.elecho.dev/wpfsuite"
    Title="AboutPage"
    d:Background="White"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:Foreground="Black"
    Foreground="{DynamicResource ForeColor}"
    mc:Ignorable="d">

    <base:ScrollViewer Margin="28,12,28,28" Style="{DynamicResource SimpleVerticalScrollViewerStyle}">
        <ws:StackPanel>
            <TextBlock
                Margin="0,0,0,12"
                FontSize="22"
                Text="{DynamicResource SettingsWindow_Tab_About}" />
            <Grid x:Name="ContentGrid" />
        </ws:StackPanel>
    </base:ScrollViewer>
</Page>
